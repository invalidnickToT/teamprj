<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.market.lemon.reply.service.replyMapper">
	<select id = "replyList" resultType="co.market.lemon.reply.service.ReplyVO">
		SELECT REPLY_ID, REPLY_WRITER, REPLY_SUBJECT, REPLY_WDATE
		FROM REPLY
		WHERE PRODUCT_ID = #{productId}
	</select>
	
	<select id="selectReply" resultType="co.market.lemon.reply.service.ReplyVO">
		SELECT * FROM REPLY WHERE PRODUCT_ID = #{productId}
	</select>
	
	<insert id="insertReply">
		INSERT INTO REPLY VALUES (#{productId}, REPLY_SEQ.NEXTVAL, #{replyWriter}, #{replySubject}, #{replySecret})
	</insert>
	
	<update id="updateReply" parameterType="co.market.lemon.reply.service.ReplyVO">
		UPDATE REPLY SET REPLY_SUBJECT = #{replySubject}
		WHERE PRODUCT_ID = #{productId}
	</update>
	
	<delete id="deleteReply" parameterType="co.market.lemon.reply.service.ReplyVO">
		DELETE FROM REPLY
		WHERE PRODUCT_ID = #{productId}
	</delete>

	
</mapper>